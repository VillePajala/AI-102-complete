# --- Demo Mode ---
# Set to true to use mock data instead of real Azure API calls.
# Useful for exploring the UI before setting up Azure resources.
DEMO_MODE=false

# --- Lab 01: GenAI Lab + Lab 06: Agent Workshop ---
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_DALLE_DEPLOYMENT=dall-e-3
AZURE_OPENAI_API_VERSION=2024-10-21

# --- Lab 02: RAG Engine + Lab 03: Knowledge Mining ---
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net/
AZURE_SEARCH_KEY=your-search-key
AZURE_SEARCH_INDEX=ai102-index

# --- Lab 04: Vision Lab + Lab 05: Language & Speech ---
# Multi-service resource covers Vision, Language, and optionally Translator/Speech
AZURE_AI_SERVICES_ENDPOINT=https://your-ai-services.cognitiveservices.azure.com/
AZURE_AI_SERVICES_KEY=your-ai-services-key

# --- Lab 05: Language & Speech (Translator) ---
# Leave blank to fall back to AZURE_AI_SERVICES_KEY
AZURE_TRANSLATOR_KEY=
AZURE_TRANSLATOR_REGION=eastus

# --- Lab 05: Language & Speech (Speech) ---
AZURE_SPEECH_KEY=your-speech-key
AZURE_SPEECH_REGION=eastus

# --- Lab 03: Knowledge Mining (Document Intelligence, optional) ---
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-doc-intelligence.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-doc-intelligence-key

# --- Lab 07: Responsible AI ---
AZURE_CONTENT_SAFETY_ENDPOINT=https://your-content-safety.cognitiveservices.azure.com/
AZURE_CONTENT_SAFETY_KEY=your-content-safety-key
